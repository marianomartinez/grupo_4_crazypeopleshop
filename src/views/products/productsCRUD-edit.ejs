        <div class="form-group col-md-6">
            <label for="inputZip">Descuento</label>
            <input type="text" class="form-control" name="discount"value="<%=productoEdit.discount%>">
        </div>
    </div>

    <% if(sizeStock.length > 0) { %>
        <% sizeStock.forEach(rel => { %>
            <div class="form-row">

        <div class="form-group col-md-4">
            <label for="inputState">Subcategoría</label>
            <select id="inputState" class="form-control" name="subcategoryId" required>
                <option value="<%=subcategorias.find(c =>c.id == productoEdit.subcategoryId).subcategoryId %>" selected>
                <%=subcategorias.find(c =>c.id == productoEdit.subcategoryId).name %></option>
            
                <%subcategorias.forEach(subcategoria => { %>
                <option value="<%= subcategoria.id %>"><%= subcategoria.name %></option>
                <% }); %>
            </select>
        </div>

        <div class="col-12 text-center text-md-left py-4 paovh80">
            <h1 class="col-12 text-center mad">Detalle de Producto</h1>

        <section class="bg-home pt-4">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-md-4 mx-md-auto bg-light agreg">
                        <div class="signup-form">
                            <form >

                                <div class="form-row">
                                    <div class="form-group col-md-2">
                                        <label for="inputZip">ID</label>
                                        <input type="text" class="form-control" name="id" value="<%=productoShow.id%>"
                                            disabled>
                                    </div>

                                    <div class="form-group col-md-10">
                                        <label for="inputZip">Categoría</label>
                                        <% let subcat = productoShow.id_subcategoria %>
                                        <% let cate = subcategorias.find(c =>c.id == subcat).id_categoria%>
                                        <input type="text" class="form-control" name="categoria" disabled
                                             value="<%=categorias.find(d =>d.id_categoria == cate).categoria %>"
                                                selected>
                                    </div>

                                    <div class="form-group col-md-12">
                                    <label for="inputZip">SubCategoría</label>
                                    <input type="text" class="form-control" name="subcategoria" value = "<%=subcategorias.find(c =>c.id == productoShow.id_subcategoria).subcategoria %>"" disabled>
                                    </div>


                                </div>
                                <div class="form-group">
                                    <label for="inputAddress">Marca</label>
                                    <input type="text" class="form-control" disabled name="marca" placeholder="marca"
                                        value="<%=productoShow.marca%>">
                                </div>
                                <div class="form-group">
                                    <label for="inputAddress">Modelo</label>
                                    <input type="text" class="form-control" disabled name="modelo" placeholder="modelo"
                                        value="<%=productoShow.modelo%>">
                                </div>
                                <div class="form-group">
                                    <label for="inputAddress2">Descripción</label>
                                    <input type="text" class="form-control" disabled name="descripcion"
                                        placeholder="descripción del producto" value="<%=productoShow.descripcion%>">
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="inputCity">Color</label>
                                        <input type="text" class="form-control" disabled name="color"
                                            value="<%=productoShow.color%>">
                                    </div>

                                    <div class="form-group col-md-2">
                                        <label for="inputZip">Precio</label>
                                        <input type="text" class="form-control" disabled name="precio"
                                            value="<%=productoShow.precio%>">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="list-group-item ">Imágen: <img class="img-thumbnail"
                                            src="/img/prod_img/<%= productoShow.images[0] %>.jpg" alt="">

                                    </div>
                                   
                                    <div class="form-group d-inline">
                                    <a type="button" class="btn btn btn-danger" href="/products/crud">Volver</a>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
    </div>
    </section>
    <!-- Footer -->
    <%- include ('../partials/footer') %>

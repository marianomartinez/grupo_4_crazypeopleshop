<!doctype html>
<html lang="es">

<head>
    <%- include ('../partials/head')  %>
    <link rel="stylesheet" href="/css/CRUD.css">
</head>

<body>
    <div class="container">
        <%- include('../partials/header.ejs')%>

        <!-- Cuerpo principal -->
        <!--<section class="row">
            <article class="col-12  card pt-5">
                <div class="card-body">
                    <h1 class="card-title text-center">Detalle de Producto</h1>


                </div>
            </article>
        </section>-->
        <div class="col-12 text-center text-md-left py-4 fonditos">
            <h1 class="col-12 text-center mad">Producto</h1>
            <section class="bg-home min-vh-100">
                <div class="container py-4">
                    <div class="row">
                        <div class="col-12 col-md-4 mx-md-auto bg-light agreg">
                            <div class="signup-form">
                                <form>
                                    <div class="form-row">
                                        <div class="form-group col-md-2">
                                            <label for="inputZip">ID</label>
                                            <input type="text" class="form-control" name="id" value="<%=productoShow.id%>"
                                                disabled>
                                        </div>

                                        <div class="form-group col-md-10">
                                            <label for="inputZip">Categoría</label>
                                            <% let subcat = productoShow.subcategoryId %>
                                            <% let cateId = subcategorias.find(sc =>sc.id == subcat).categoryId%>
                                            <input type="text" class="form-control" name="categoria" disabled
                                                value="<%=categorias.find(c =>c.id == cateId).name %>"
                                                   selected>
                                                   <span id="errorcategoria"></span>
                                        </div>

                                        <div class="form-group col-md-12">
                                            <label for="inputZip">SubCategoría</label>
                                            <input type="text" class="form-control" name="subcategoria" 
                                                value = "<%=subcategorias.find(sc =>sc.id == productoShow.subcategoryId).name %>" disabled>
                                                <span id="errorsubcategotia"></span>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label for="inputAddress">Marca</label>
                                        <input type="text" class="form-control" disabled name="brand" placeholder="marca"
                                            value="<%=productoShow.brand%>">
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label for="inputAddress">Modelo</label>
                                        <input type="text" class="form-control" disabled name="model" placeholder="modelo"
                                            value="<%=productoShow.model%>">
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label for="inputAddress2">Descripción</label>
                                        <textarea type="text" class="form-control" rows="10" cols="30" disabled name="description"
                                            placeholder="<%=productoShow.description%>"
                                            value="<%=productoShow.description%>"></textarea>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="inputCity">Precio</label>
                                            <input type="text" class="form-control" disabled name="price"
                                                value="<%=productoShow.price%>">
                                        </div>

                                        <div class="form-group col-md-3">
                                            <label for="inputZip">Descuento</label>
                                            <input type="text" class="form-control" disabled name="discount"
                                                value="<%=productoShow.discount%>">
                                        </div>
                                    </div>

                                    <% if(sizeStock.length > 0) { %>
                                        <% sizeStock.forEach(rel => { %>
                                            <% let size = sizes.find(size=>size.id == rel.sizeId); %>
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    <label for="inputCity">Talle</label>
                                                    <input type="text" class="form-control" disabled name="size"
                                                        value="<%=size.eusize%>">
                                                </div>

                                                <div class="form-group col-md-3">
                                                    <label for="inputZip">Stock</label>
                                                    <input type="text" class="form-control" disabled name="stock"
                                                        value="<%=rel.stock%>">
                                                </div>
                                            </div>
                                        <% }) %>
                                    <% }; %>

                                    <div class="form-group">
                                        <% if (productoShow.images.length == 0) { %>
                                                <!-- Si el producto no tiene imagen muestra esto -->
                                            <div class="list-group-item">Imagen: <img class="img-thumbnail"
                                                    src="/img/web/noImage.jpg" alt="">
                                            </div>
                                        <% } else { %>
                                            <% productoShow.images.forEach(img=> {%>
                                            <!-- Si el producto tiene imagen muestra sus imágenes -->
                                            <div class="list-group-item">Imagen: <img class="img-thumbnail"
                                                src="/img/prod_img/<%= img.filename %>" alt="">
                                            </div>
                                        <% }); %>
                                        <% }; %>
                                    </div>
                                        
                                    <div class="form-group d-inline">
                                        <a type="button" class="btn btn btn-danger" href="/products/crud">Volver</a>
                                        <a class="btn bg-primary text-white mx-md-auto" href="/products/productsCRUDedit/<%=productoShow.id%>">Editar</a>
                                        <a class="btn bg-primary text-white mx-md-auto" href="/products/productsCRUDeditImages/<%=productoShow.id%>">Editar imágenes</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <!-- Footer -->
    <%- include ('../partials/footer') %>
    <!-- Scripts para Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
        integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
        crossorigin="anonymous"></script>
</body>

</html>
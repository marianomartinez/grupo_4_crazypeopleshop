<!doctype html>
<html lang="es">

<head>
    <%- include ('../partials/head')  %>
    <link rel="stylesheet" href="/css/CRUD.css">
</head>


<body>
    <div class="container">
        <%- include('../partials/header.ejs')%>

        <!-- Cuerpo principal -->
        <!--<section class="row">
            <article class="col-12  card pt-5">
                <div class="card-body">
                    <h1 class="card-title text-center">Creación Producto</h1>



                </div>
            </article>
        </section>-->
        <div class="col-12 text-center text-md-left py-4 fonditos">
            <h1 class="col-12 text-center mad">Creación Producto</h1>

            <section class="bg-home min-vh-100">
                <div class="container py-4">
                    <div class="row">
                        <div class="col-12 col-md-4 mx-md-auto pt-4 bg-light agreg">
                            <div class="signup-form pb-4">
                                <form action="/products/crud" method="post" class = "formulario" id = "formulario"enctype="multipart/form-data">

                                    <div class="form-group">
                                        <select class="form-control custom-select" name="categoryId"  id="selectedCat">
                                            <option disabled selected>Seleccione Categoría</option>
                                            <% categorias.forEach(categoria => { %>
                                            <option value="<%= categoria.id %>"><%= categoria.name %></option>
                                            <% }); %>
                                        </select>
                                        <% if(typeof errors != 'undefined' && errors.categoryId){  %>
                                        <span class="text-danger"> <%=errors.categoryId.msg%> </span>
                                        <% } %>
                                        <span id="errorcat"></span>
                                    </div>

                                    <div class="form-group">
                                        <select class="form-control custom-select" name="subcategoryId" id="dynamicSubcat">
                                            <option disabled selected>Primero seleccione Categoría</option>
                                        </select>
                                            <% if(typeof errors != 'undefined' && errors.subcategoryId){  %>
                                            <span class="text-danger"> <%=errors.subcategoryId.msg%> </span>
                                            <% } %>
                                        <span id="errorsubcategoria"></span>
                                    </div>

                                    <div class="form-group">
                                        <input type="text" class="form-control" name="brand" placeholder="Marca"
                                            value="<%=typeof old == 'undefined' ? null : old.brand%>">
                                        <% if(typeof errors != 'undefined' && errors.brand){  %>
                                        <span class="text-danger"> <%=errors.brand.msg%> </span>
                                        <% } %>
                                        <span id="errorbrand"></span>
                                    </div>



                                    <div class="form-group">
                                        <input type="text" class="form-control" name="model" placeholder="Modelo"
                                            value="<%=typeof old == 'undefined' ? null : old.model%>">
                                        <% if(typeof errors != 'undefined' && errors.model){  %>
                                        <span class="text-danger"> <%=errors.model.msg%> </span>
                                        <% } %>
                                        <span id="errormodelo"></span>
                                    </div>

                                
                                    <div class="form-group">
                                        <textarea name="description" class="form-control" placeholder="Descripción"
                                        cols="30" rows="10"><%=typeof old == 'undefined' ? null : old.description%></textarea>

                                        <% if(typeof errors != 'undefined' && errors.description){  %>
                                        <span class="text-danger"> <%=errors.description.msg%> </span>
                                        <% } %>
                                        <span id="errordescription"></span>
                                    </div>

                                

                                    <div class="form-group">
                                        <input type="text" class="form-control" name="price" placeholder="Precio"
                                            value="<%=typeof old == 'undefined' ? null : old.price%>">
                                        <% if(typeof errors != 'undefined' && errors.price){  %>
                                        <span class="text-danger"> <%=errors.price.msg%> </span>
                                        <% } %>
                                        <span id="errorprice"></span>
                                    </div>



                                    <div class="form-group">
                                        <input type="text" class="form-control" name="discount" placeholder="Descuento"
                                            value="<%=typeof old == 'undefined' ? null : old.discount%>">
                                        <% if(typeof errors != 'undefined' && errors.discount){  %>
                                        <span class="text-danger"> <%=errors.discount.msg%> </span>
                                        <% } %>
                                        <span id="errordiscount"></span>
                                    </div>
                                

                                    <div class="form-group">
                                        <!-- <label>Subir imágenes</label> -->
                                        <input type="file" class="form-control" name="image" multiple>
                                        <span id="errorimagen"></span>
                                    </div>

                                    <div class="form-group d-inline">
                                        <button type="submit" class="btn btn btn-info">Crear</button>
                                    </div>

                                    <div class="form-group d-inline">
                                        <a type="button" class="btn btn btn-danger" href="/products/crud">Volver</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <!-- Footer -->
    <%- include ('../partials/footer') %>

    <%- include ('../partials/scripts') %>
    <!-- Scripts para Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
        integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
        crossorigin="anonymous"></script>
        
    <!-- Scripts para JS -->
    <script src="/js/dynamicSubcat.js"></script> 
    <script src="/js/productCreate.js"></script>
</body>

</html>
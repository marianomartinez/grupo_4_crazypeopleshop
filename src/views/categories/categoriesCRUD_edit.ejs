</head>

<body>
    <div class="container">
        <%- include('../partials/header.ejs')%>
        <main class="fonditos mb-7 py-3">

        <!-- Cuerpo principal -->
        <!--<section class="row">
            <article class="col-12  card pt-5">
                <div class="card-body">

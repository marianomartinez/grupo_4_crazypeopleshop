        <div class="col-12 text-center text-md-left py-4"> <!-- acá quité paovh80 y fonditos -->
            <h1 class="col-12 text-center mad">Edición de Categorías</h1>
        
            <section class="bg-home min-vh-100">
                <div class="container py-4">
                    <div class="row">
                        <div class="col-12 col-md-4 mx-md-auto bg-light agreg">
                            <div class="signup-form">
                                <form action="/categories/edit/<%=categoriaEdit.id%>?_method=put" id = "formulario" method="POST" enctype="multipart/form-data">
                                
                                    <div class="form-row">
                                        <div class="form-group col-md-2">
                                            <label for="inputZip">ID</label>
                                            <input type="text" class="form-control" name="id" value="<%=categoriaEdit.id%>" disabled>
                                            <span id="errorid"></span>
                                        </div>

                                         <div class="form-group">
                                            <label for="inputAddress"> Categoría </label>
                                            <input type="text" class="form-control" name="name" placeholder="Categoria"
                                                value="<%=categoriaEdit.name%>">
                                                <% if(typeof errors != 'undefined' && errors.name){  %>
                                                <span class="text-danger"> <%=errors.name.msg%> </span>
                                                <% } %>
                                                <span id="errorname"></span>
                                        </div>

                                        <div class="form-group col-12">
                                            <label for="inputAddress">Descripción</label>
                                            <input type="text" class="form-control" name="description" placeholder="Descripción"
                                                value="<%=categoriaEdit.description%>">
                                            <% if(typeof errors != 'undefined' && errors.description){  %>
                                            <span class="text-danger"> <%=errors.description.msg%> </span>
                                            <% } %>
                                            <span id="errordescripcion"></span>
                                        </div>
                                    </div>
                                
                                    <div class="form-group">
                                        <div class="list-group-item ">Imagen: <img class="img-thumbnail" src="/img/web/<%= categoriaEdit.image%>" alt="">
                                            <input type="hidden" name="image_old" value=<%=categoriaEdit.image%>>
                                            <input type="file" class="form-control" name="image" placeholder="Imagen" value="<%=categoriaEdit.image%>">
                                            <span id="errorimagen"></span>
                                        </div>
                                    </div>
                                
                                    <div class="form-group d-inline">
                                        <button type="submit" class="btn btn btn-primary">Actualizar</button>
                                    </div>

                                    <div class="form-group d-inline">
                                        <a type="button" class="btn btn btn-danger" href="/categories/crud">Volver</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        </main>
    </div>
    <!-- Footer -->
    <%- include ('../partials/footer') %>

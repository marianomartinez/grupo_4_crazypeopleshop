<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head')  %>
    <link rel="stylesheet" href="/css/user.css">
</head>

<body>
    <div class="container">
        <!-- Header de header.ejs -->
        <%- include ('../partials/header')  %>
      

        <!-- <main class="fonditos paovh80"> -->
            <!--<h1 class="text-center text-dark display-5  pt-2"> Detalle de Usuario</h1>-->
        <div class="col-12 text-center text-md-left py-4 fonditos">
            <h1 class="col-12 text-center mad">Usuario</h1>
            <section class="bg-home min-vh-100">
                <div class="container py-4">
                    <div class="row">
                       <div class="col-8 mx-auto bg-light  somb">
                           <div class="card ">
                                <ul class="list-group">
                                    <li class="list-group-item">ID Usuario: <%=usuarioShow.id %> </li>  
                                    <li class="list-group-item">Nombre: <%=usuarioShow.firstName %> </li>
                                    <li class="list-group-item">Apellido: <%=usuarioShow.lastName %> </li>
                                    <li class="list-group-item">Correo Electrónico: <%=usuarioShow.email %> </li>
                                    <!-- <li class="list-group-item">Contraseña: <%= // usuarioShow.password %> </li> -->
                                    <li class="list-group-item">Teléfono: <%=usuarioShow.phone %> </li>
                                    <li class="list-group-item">Fecha de Alta: <%=usuarioShow.createdAt %> </li>
                                    <li class="list-group-item">Tipo Usuario: <%=usuarioShow.role.name %> </li>
                                    <li class="list-group-item ">Avatar:
                                        <figure class="avatarprofile"><img src="/img/users/<%= usuarioShow.image%>" alt=""></figure>
                                    </li>
                                </ul>
                            </div>
                            <a class="btn bg-danger text-white mt-1 mx-md-auto" href="/users/crud">Volver</a>
                            <a class="btn bg-primary text-white mt-1 mx-md-auto" href="/users/edit/<%=usuarioShow.id%>">Editar</a>
                        </div> 
                    </div>
                </div>
            </section>
        </div>
    </div>
    <!-- Footer de footer.ejs -->
    <%- include ('../partials/footer') %>

    <!-- Scripts de scripts.ejs -->
    <%- include ('../partials/scripts') %>

    <!-- Fin del Container -->
    <script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
</body>

</html>
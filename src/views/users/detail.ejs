<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head')  %>
</head>

<body>
    <div class="container">
        <!-- Header de header.ejs -->
        <%- include ('../partials/header')  %>


        <main>
            <h1 class="text-center text-success display-5 mt-5 pt-2"> Administrador de Usuarios</h1>


            <div class="container-fluid">
                <table class='table mt-5'>
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>eMail</th>
                            <th>Ver</th>
                            <th>Editar</th>
                            <th>Borrar</th>
                        </tr>

                    </thead>
                    <tbody>

                      
                        <tr>
                            <td><%=usuarioShow.id %></td>
                            <td><%=usuarioShow.first_name %></td>
                            <td><%=usuarioShow.last_name %></td>
                            <td><%=usuarioShow.email %></td>
                            <td><a href="/users/detail/<%=usuarioShow.id%> ">
                                    <ion-icon name="eye-outline"></ion-icon>
                                </a></td>
                            <td><a href="/users/edit/<%=usuarioShow.id%> ">
                                    <ion-icon name="create-outline"></ion-icon>
                                </a></td>
                            <td><a href="/users/delete/<%=usuarioShow.id%> ">
                                    <ion-icon name="trash-outline"></ion-icon>
                                </a></td>

                        </tr>

                      


                    </tbody>

                </table>
            </div>



        </main>

        <!-- Footer de footer.ejs -->
        <%- include ('../partials/footer') %>

        <!-- Scripts de scripts.ejs -->
        <%- include ('../partials/scripts') %>

        <!-- Fin del Container -->
    </div>
    <script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
</body>

</html>
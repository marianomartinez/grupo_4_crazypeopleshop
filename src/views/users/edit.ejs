<!doctype html>
<html lang="es">

<head>
    <%- include ('../partials/head')  %>
</head>

<body class="fonditos mb-1">
    <div class="container-fluid">
        <%- include('../partials/header.ejs')%>

        <!-- Cuerpo principal -->
        <!--<section class="row">
            <article class="col-12  card pt-5">
                <div class="card-body">
                    <h1 class="card-title text-center">Edición de Usuarios</h1>



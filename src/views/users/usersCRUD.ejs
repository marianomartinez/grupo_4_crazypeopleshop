<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head')  %>
    <link rel="stylesheet" href="/css/CRUD.css">
</head>

<body>
    <div class="container">
        <!-- Header de header.ejs -->
        <%- include ('../partials/header')  %>


        <main>
            <h1 class="text-center text-dark display-5 mt-5 pt-2 mad"> Administrador de Usuarios</h1>
            <section>

                <a class="display-5 mt-5 agreg" href="/users/usersCRUD/add">Agregar Usuario</a>
                
            </section>
            
       
            <div class="container-fluid">
                <table class='table mt-5'>
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>eMail</th>
                            <th>Tipo</th>
                            <th>Ver</th>
                            <th>Editar</th>
                            <th>Borrar</th>
                        </tr>
            
                    </thead>
                    <tbody>
            
                        <% usuarios.forEach(usuario => { %>
                        <tr>
                            <td><%=usuario.id %></td>
                            <td><%=usuario.first_name %></td>
                            <td><%=usuario.last_name %></td>
                            <td><%=usuario.email %></td>
                            <td><%=usuario.administra %></td>
                            <td><a href="/users/detail/<%=usuario.id%> ">
                                    <ion-icon name="eye-outline"></ion-icon>
                                </a></td>
                            <td><a href="/users/edit/<%=usuario.id%> ">
                                    <ion-icon name="create-outline"></ion-icon>
                                </a></td>
                            <td><a href="/users/delete/<%=usuario.id%> ">
                                    <ion-icon name="trash-outline"></ion-icon>
                                </a></td>
            
                        </tr>
            
                        <% });%>
            
            
                    </tbody>
            
                </table>
            </div>
            
         

        </main>

        <!-- Scripts de scripts.ejs -->
        <%- include ('../partials/scripts') %>

        <!-- Fin del Container -->
    </div>
            <script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
</body>

</html>
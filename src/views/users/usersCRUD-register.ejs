<!doctype html>
<html lang="es">

<head>
  <%- include ('../partials/head')  %>
  <link rel="stylesheet" href="/css/CRUD.css">
  <link rel="stylesheet" href="/css/register.css">
</head>

<body>
  
  <div class="container">
    <%- include('../partials/header.ejs')%>
    <main class=" fonditos mb-7 py-3">
    <!-- Cuerpo principal -->
    <!--<section class="row">
      <article class="col-12 py-0">

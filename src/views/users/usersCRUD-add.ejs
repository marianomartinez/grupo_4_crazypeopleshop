        <div class="col-12 text-center text-md-left py-3 ">
            <h1 class="col-12 text-center mad">Creaci칩n Usuario</h1>

        
        <section class="bg-home">
            <div class="container py-4">
                <div class="row">
                    <div class="col-12 col-md-4 mx-md-auto pt-4 bg-light ">
                        <div class="signup-form pb-4">
                            <form action="/users/create" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                  
                                 </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="firstName" placeholder="Nombre"
                                        value = "<%=typeof old == 'undefined' ? null : old.firstName%>">
                                    <% if(typeof errors != 'undefined' && errors.firstName){  %>
                                        <span class="text-danger"> <%=errors.firstName.msg%> </span>
                                    <% } %>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="lastName" placeholder="Apellido"
                                        value = "<%=typeof old == 'undefined' ? null : old.lastName%>">
                                        <% if(typeof errors != 'undefined' && errors.lastName){  %>
                                        <span class="text-danger"> <%=errors.lastName.msg%> </span>
                                        <% } %>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" name="email" placeholder="e-Mail"
                                         value = "<%=typeof old == 'undefined' ? null : old.email%>">
                                        <% if(typeof errors != 'undefined' && errors.email){  %>
                                        <span class="text-danger"> <%=errors.email.msg%> </span>
                                    <% } %>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" name="password" placeholder="Ingrese contrase침a (6 a 15 caracteres)"
                                        value = "<%=typeof old == 'undefined' ? null : old.password%>">
                                        <% if(typeof errors != 'undefined' && errors.password){  %>
                                        <span class="text-danger"> <%=errors.password.msg%> </span>
                                    <% } %>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" name="password2" placeholder="Reingrese contrase침a (6 a 15 caracteres)">
                                </div>
                                <div class="form-group">
                                    <input type="file" class="form-control" name="imagen" placeholder="Imagen">
                                </div>
                                
                                 
                                <div class="form-group ml-4">
                                    <input type="checkbox" class="form-check-input" name="role"
                                        placeholder="">
                                    <label class="form-check-label" for="exampleCheck1">Es administrador</label>
                                </div>
                               
                                
                                <div class="form-group d-inline">
                                        <button type="submit" class="btn btn-primary">Crear</button>
                                </div>
                                <div class="form-group d-inline">
                                    <a type="button" class="btn btn-danger" href="/users/crud">Volver</a>
                                </div>
                            </form>
        



                        </div>
                    </div>
                </div>
            </div>
            </div>
        </section>
    </main>

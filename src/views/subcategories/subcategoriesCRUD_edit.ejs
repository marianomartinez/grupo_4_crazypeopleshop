        <div class="col-12 text-center text-md-left py-4">
            <h1 class="col-12 text-center mad">Edición de Subcategorías</h1>
        
        <section class="bg-home pt-4">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-md-4 mx-md-auto bg-light ">
                        <div class="signup-form">
                            <form action="/subcategories/edit/<%=subcategoriaEdit.id%>?_method=put" method="POST" enctype="multipart/form-data">
                                <div class="form-row">
                                    <div class="form-group col-md-2">
                                        <label for="id">ID</label>
                                        <input type="text" class="form-control" name="id" value="<%=subcategoriaEdit.id%>" disabled>
                                    </div>
                                    <div class="form-group col-12">
                                        <label for="subcategoria">Subcategoría</label>
                                        <input type="text" class="form-control" name="name"
                                            placeholder="Subcategoría" value="<%=subcategoriaEdit.name%>">
                                    </div>
                                    <div class="form-group col-12">
                                        <label for="categoria">Categoría a la que pertenece</label>
                                        <select class="form-control custom-select" name="categoria" required>
                                            <%categorias.forEach(categoria => { %>
                                            <option value="<%= categoria.id %>"
                                                <% if (categoria.id == subcategoriaEdit.categoriaId) { %> <%= 'selected' %> <% }; %>>
                                                <%= categoria.name %>
                                            </option>
                                            <% }); %>
                                        </select>
                                    </div>
                                    <div class="form-group col-12">
                                        <label for="descripcion">Descripción</label>
                                        <input type="text" class="form-control" name="descripcion" placeholder="Descripción"
                                            value="<%=subcategoriaEdit.description%>">
                                    </div>
                             </div>
        
                             <div class="form-group">
                                    <div class="list-group-item ">Imágen: <img class="img-thumbnail"
                                        src="/img/web/<%= subcategoriaEdit.image%>" alt="">
                                        <input type="file" class="form-control" name="imagen" placeholder="Imagen"
                                        value="<%=subcategoriaEdit.image%>">
                                    </div>
                                </div>
        
        
                              <div class="form-group d-inline">
                                    <button type="submit" class="btn btn btn-primary">Actualizar</button>
                                </div>
                                <div class="form-group d-inline">
                                    <a type="button" class="btn btn btn-danger" href="/subcategories/crud">Volver</a>
                                </div>
        
                        </form>
        
                        </div>
                    </div>
                </div>
            </div>
            
        </section>
    <!-- Footer -->
    <%- include ('../partials/footer') %>

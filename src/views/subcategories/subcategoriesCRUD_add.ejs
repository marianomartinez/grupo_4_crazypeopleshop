<html lang="es">

<head>
    <%- include ('../partials/head')  %>
    <link rel="stylesheet" href="/css/CRUD.css">
</head>

<body>
   
    <div class="container">
        <%- include('../partials/header.ejs')%>

        <!-- Cuerpo principal -->
        <!--<section class="row">
            <article class="col-12  card pt-5">
                <div class="card-body">
                    <h1 class="card-title text-center">Creación Categoría</h1>
                </div>
            </article>
        </section>-->
        <div class="col-12 text-center text-md-left py-4 fonditos">
            <h1 class="col-12 text-center mad">Creación Subcategoría</h1>

            <section class="bg-home min-vh-100">
                <div class="container py-4">
                    <div class="row">
                        <div class="col-12 col-md-4 mx-md-auto pt-4 bg-light agreg">
                            <div class="signup-form pb-4">
                                <form action="/subcategories/crud" method="post" id = "formulario" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <select class="form-control custom-select" name="categoria" required>
                                            <option disabled selected>Seleccione categoría a la que pertenece</option>
                                            <%categorias.forEach(categoria => { %>
                                                <% if(typeof old != 'undefined'){ %> 
                                                <option value="<%= categoria.id %>" <% if (categoria.id == old.categoria) { %> <%= 'selected' %>
                                                 <% }; %>> <%= categoria.name %>
                                                </option>
                                            <% } %> 
                                                    <% if(typeof old == 'undefined'){ %>
                                                    <option value="<%= categoria.id %>">
                                                    <%= categoria.name %>
                                                    </option>
                                                    <% } %>
                                            <% }); %>
                                        </select>       
                                            <% if(typeof errors != 'undefined' && errors.categoria){  %>
                                            <span class="text-danger"> <%=errors.categoria.msg%> </span>
                                            <% } %>
                                            <span id="errorcategoria"></span>
                                    </div>

                                    <div class="form-group col-12">
                                        <input type="text" class="form-control" name="name" placeholder="Nueva Subcategoría"
                                        value = "<%=typeof old == 'undefined' ? null : old.name%>">
                                        <% if(typeof errors != 'undefined' && errors.name){  %>
                                        <span class="text-danger"> <%=errors.name.msg%> </span>
                                        <% } %>
                                        <span id="errornombre"></span>
                                    </div>

                                    <div class="form-group col-12">
                                        <input type="text" class="form-control" name="description" placeholder="Descripción"
                                            value="<%=typeof old == 'undefined' ? null : old.description%>">
                                        <% if(typeof errors != 'undefined' && errors.description){  %>
                                        <span class="text-danger"> <%=errors.description.msg%> </span>
                                        <% } %>
                                        <span id="errordescripcion"></span>
                                    </div>

                                    <!--      <div class="form-group">
                                        <input type="file" class="form-control" name="imagen" placeholder="Imagen">
                                    </div>
                                -->
                                    <div class="form-group d-inline">
                                        <button type="submit" class="btn btn btn-info">Crear</button>
                                    </div>

                                    <div class="form-group d-inline">
                                        <a type="button" class="btn btn btn-danger" href="/subcategories/crud">Volver</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <!-- Footer -->
    <%- include ('../partials/footer') %>
    <%- include ('../partials/scripts') %>
